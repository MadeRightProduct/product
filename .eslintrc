{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  parserOptions: {
    ecmaFeatures: {
      "jsx": true
    }
  },
  rules: {
    /* Indentation */
    "no-mixed-spaces-and-tabs": 2,
    "indent": [2, 2],
    /* Variable cases */
    camelcase: [2, {properties: "always"}],
    /* Language constructs */
    "curly": 2,
    "eqeqeq": [2, "smart"],
    "func-style": [2, "expression"],
    /* Semicolons */
    "semi": 2,
    "no-extra-semi": 2,
    /* Padding & additional whitespace (perferred but optional) */
    "no-multiple-empty-lines": [1, { "max": 2, "maxEOF": 1 }],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "semi-spacing": 1,
    "key-spacing": 1,
    "block-spacing": 1,
    "comma-spacing": 1,
    "no-multi-spaces": 1,
    "space-before-blocks": 1,
    "keyword-spacing": [1, { "before": true, "after": true }],
    "space-infix-ops": 1,
    /* Variable declaration */
    "one-var": [1, { "uninitialized": "always", "initialized": "never" }],
    /* Commas */
    "comma-style": [2, "last"],
    "comma-dangle": [2, "always-multiline"],
    /* Quotes */
    "quotes": [2, "single"],
    /* Output */
    "no-console": 1,
  }
}